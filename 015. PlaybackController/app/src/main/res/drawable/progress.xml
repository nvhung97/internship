<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:id="@android:id/background"
        android:top="@dimen/playback_progress_top"
        android:bottom="@dimen/playback_progress_bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSeekBarTrack"/>
        </shape>
    </item>
    <item
        android:id="@android:id/secondaryProgress"
        android:top="@dimen/playback_progress_top"
        android:bottom="@dimen/playback_progress_bottom">
        <scale android:scaleWidth="100%" >
            <shape android:shape="rectangle">
                <solid android:color="@color/colorSeekBarSecondary"/>
            </shape>
        </scale>
    </item>
    <item
        android:id="@android:id/progress"
        android:top="@dimen/playback_progress_top"
        android:bottom="@dimen/playback_progress_bottom">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorSeekBarPrimary"/>
            </shape>
        </scale>
    </item>
</layer-list>