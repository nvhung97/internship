<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hung_pc.recyclerviewdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".linear_layout.LinearLayoutActivity"
            android:label="@string/linear_layout" />
        <activity
            android:name=".grid_layout.GridLayoutActivity"
            android:label="@string/grid_layout" />
        <activity
            android:name=".staggered_grid_layout.StaggeredGridLayoutActivity"
            android:label="@string/staggered_grid_layout" />
        <activity
            android:name=".multiple_item_types.MultipleItemTypesActivity"
            android:label="@string/multiple_item_types" />
        <activity
            android:name=".swipe_delete_item.SwipeDeleteItemActivity"
            android:label="@string/swipe_delete_item"/>
    </application>

</manifest>