<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.cpu11398_local.etalk.presentation.view_model.group.CreateGroupViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@id/create_group_activity_status_bar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/status_bar_background"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <FrameLayout
                android:id="@id/create_group_activity_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/tool_bar_backgound">
                <ImageButton
                    android:id="@id/create_group_activity_btn_back_arrow"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="match_parent"
                    android:padding="17dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_arrow_back"
                    android:onClick="@{viewModel::onBackPressed}"
                    android:background="@drawable/tool_bar_background_button"/>
                <TextView
                    android:id="@id/create_group_activity_txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="?attr/actionBarSize"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/create_group_activity_txt_title"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"
                    android:gravity="center_vertical"/>
                <Button
                    android:id="@id/create_group_activity_btn_create"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:text="@string/create_group_activity_btn_create"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/tool_bar_background_button"
                    android:onClick="@{viewModel::onCreateGroup}"
                    android:enabled="@{viewModel.createEnable}"/>
            </FrameLayout>

            <TextView
                android:id="@id/create_group_activity_txt_no_connection"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/app_no_connection"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:background="@color/colorLoadingBackground"
                android:visibility="@{viewModel.networkStateNotificationVisibility}"
                app:layout_constraintTop_toBottomOf="@id/create_group_activity_tool_bar"/>

            <FrameLayout
                android:id="@id/create_group_activity_lyt_group_name"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/create_group_activity_txt_no_connection">
                <com.example.cpu11398_local.etalk.presentation.custom.AvatarImageView
                    android:id="@id/create_group_activity_img_avatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="15dp"
                    android:onClick="@{viewModel::onChangeAvatar}"
                    bind:src_from_object="@{viewModel.avatar}"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/img_edit_avatar"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="55dp"
                    android:onClick="@{viewModel::onChangeAvatar}"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_edit_avatar"
                    bind:anim="@{@anim/anim_edit_avatar}"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="55dp"
                    android:onClick="@{viewModel::onChangeAvatar}"/>
                <EditText
                    android:id="@id/create_group_activity_edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="15dp"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:hint="@string/create_group_activity_edt_name_hint"
                    android:text="@={viewModel.name}"
                    android:textCursorDrawable="@drawable/edt_cursor_black"
                    android:layout_gravity="center_vertical"/>
            </FrameLayout>
            <FrameLayout
                android:id="@id/create_group_activity_lyt_member"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/create_group_activity_lyt_group_name"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@id/create_group_activity_txt_member_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="15dp"
                    android:textStyle="bold"
                    android:text="@string/create_group_activity_txt_member_title"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@id/create_group_activity_rv_member"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="5dp"
                    bind:setRecyclerViewAdapter="@{viewModel.adapter}"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/colorLightGray"/>
            </FrameLayout>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</layout>