<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/lyt_row_message_person"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/btn_tab_more">
    <com.example.cpu11398_local.etalk.presentation.custom.AvatarImageView
        android:id="@id/lyt_row_message_person_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@id/lyt_row_message_person_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="100dp"
        android:textColor="@color/colorBlack"
        android:maxLines="1"
        android:textSize="16sp"
        android:gravity="bottom"/>
    <com.example.cpu11398_local.etalk.presentation.custom.TimeTextView
        android:id="@+id/lyt_row_message_person_time"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:gravity="right"
        android:maxLines="1"
        android:textSize="13sp"/>
    <com.example.cpu11398_local.etalk.presentation.custom.ShortMessage
        android:id="@+id/lyt_row_message_person_message"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:maxLines="1"
        android:textSize="15sp"
        android:ellipsize="end"
        android:gravity="center_vertical"/>
</FrameLayout>