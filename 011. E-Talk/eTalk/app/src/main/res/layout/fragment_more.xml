<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.cpu11398_local.etalk.presentation.view_model.content.MoreViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:id="@id/more_fragment_btn_my_profile"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:clickable="true"
                android:onClick="@{viewModel::onMyProfile}"
                android:background="@drawable/btn_tab_more">
                <com.example.cpu11398_local.etalk.presentation.custom.AvatarImageView
                    android:id="@id/more_fragment_btn_my_profile_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    bind:src_from_url="@{viewModel.avatarUrl}"/>
                <TextView
                    android:id="@id/more_fragment_btn_my_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="80dp"
                    android:gravity="bottom"
                    android:textSize="16dp"
                    android:text="@{viewModel.name}"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="80dp"
                    android:layout_gravity="bottom"
                    android:gravity="top"
                    android:text="@string/more_fragment_btn_profile"
                    android:textSize="14dp"/>
            </FrameLayout>
            <FrameLayout
                android:id="@id/more_fragment_btn_people_nearby"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:onClick="@{viewModel::onPeopleNearby}"
                android:background="@drawable/btn_tab_more">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_nearby"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:text="@string/more_fragment_btn_nearby"
                    android:textSize="16dp"
                    android:textColor="@color/colorBlack"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="80dp"
                    android:layout_gravity="bottom"
                    android:background="@color/colorLightGray"/>
            </FrameLayout>
            <FrameLayout
                android:id="@id/more_fragment_btn_chat_rooms"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:onClick="@{viewModel::onChatRooms}"
                android:background="@drawable/btn_tab_more">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_chat_room"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:text="@string/more_fragment_btn_chat_rooms"
                    android:textSize="16dp"
                    android:textColor="@color/colorBlack"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="80dp"
                    android:layout_gravity="bottom"
                    android:background="@color/colorLightGray"/>
            </FrameLayout>
            <FrameLayout
                android:id="@id/more_fragment_btn_shop"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:onClick="@{viewModel::onShop}"
                android:background="@drawable/btn_tab_more">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_shop"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:text="@string/more_fragment_btn_shop"
                    android:textSize="16dp"
                    android:textColor="@color/colorBlack"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="80dp"
                    android:layout_gravity="bottom"
                    android:background="@color/colorLightGray"/>
            </FrameLayout>
            <FrameLayout
                android:id="@id/more_fragment_btn_game"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:onClick="@{viewModel::onGame}"
                android:background="@drawable/btn_tab_more">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_game"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:text="@string/more_fragment_btn_game"
                    android:textSize="16dp"
                    android:textColor="@color/colorBlack"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="80dp"
                    android:layout_gravity="bottom"
                    android:background="@color/colorLightGray"/>
            </FrameLayout>
            <FrameLayout
                android:id="@id/more_fragment_btn_channel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:onClick="@{viewModel::onChannel}"
                android:background="@drawable/btn_tab_more">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_channel"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:text="@string/more_fragment_btn_channel"
                    android:textSize="16dp"
                    android:textColor="@color/colorBlack"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="80dp"
                    android:layout_gravity="bottom"
                    android:background="@color/colorLightGray"/>
            </FrameLayout>
            <FrameLayout
                android:id="@id/more_fragment_btn_taxi"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:onClick="@{viewModel::onTaxi}"
                android:background="@drawable/btn_tab_more">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_taxi"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:text="@string/more_fragment_btn_taxi"
                    android:textSize="16dp"
                    android:textColor="@color/colorBlack"/>
            </FrameLayout>
            <FrameLayout
                android:id="@id/more_fragment_btn_logout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:onClick="@{viewModel::onLogout}"
                android:background="@drawable/btn_tab_more">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_logout"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:text="@string/more_fragment_btn_logout"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"/>
            </FrameLayout>
        </LinearLayout>

    </ScrollView>
</layout>