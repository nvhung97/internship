<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@id/media_photo_activity_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlack"
            android:src="@drawable/img_background"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorBlack50Transparent">
            <ImageButton
                android:id="@id/media_photo_activity_back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:padding="17dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/tool_bar_background_button"/>
            <TextView
                android:id="@id/media_photo_activity_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="?attr/actionBarSize"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:maxLines="1"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
        </FrameLayout>
    </FrameLayout>
</layout>