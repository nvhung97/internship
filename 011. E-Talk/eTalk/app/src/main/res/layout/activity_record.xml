<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".presentation.view.camera.RecordActivity">

    <com.example.cpu11398_local.etalk.presentation.custom.AutoFitTextureView
        android:id="@+id/record_activity_texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.example.cpu11398_local.etalk.presentation.custom.ClockView
        android:id="@+id/record_activity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorBlack25Transparent"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/record_activity_resolution_1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="1x2"
            android:textColor="@color/colorETalkClickLight"
            android:textAllCaps="false"
            android:background="@null"
            android:onClick="onChooseResolution1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/record_activity_resolution_2"/>
        <Button
            android:id="@+id/record_activity_resolution_2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="1x2"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:background="@null"
            android:onClick="onChooseResolution2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <Button
            android:id="@+id/record_activity_resolution_3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="1x2"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:background="@null"
            android:onClick="onChooseResolution3"
            app:layout_constraintLeft_toRightOf="@id/record_activity_resolution_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <Button
            android:id="@+id/record_activity_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_cancel"
            android:onClick="onRecordCancel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/record_activity_stop_record"
            app:layout_constraintRight_toLeftOf="@id/record_activity_stop_record"
            app:layout_constraintBottom_toBottomOf="@id/record_activity_stop_record"/>
        <Button
            android:id="@+id/record_activity_stop_record"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/btn_stop_record"
            android:onClick="onRecordStop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/record_activity_record"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/btn_record"
            android:onClick="onRecordExecute"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/record_activity_switch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_switch"
            android:onClick="onRecordSwitch"
            app:layout_constraintLeft_toRightOf="@id/record_activity_stop_record"
            app:layout_constraintTop_toTopOf="@id/record_activity_stop_record"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/record_activity_stop_record"/>
        <Button
            android:id="@+id/record_activity_tick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_tick"
            android:visibility="gone"
            android:onClick="onRecordTick"
            app:layout_constraintLeft_toRightOf="@id/record_activity_stop_record"
            app:layout_constraintTop_toTopOf="@id/record_activity_stop_record"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/record_activity_stop_record"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>