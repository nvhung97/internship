<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <com.example.cpu11398_local.etalk.presentation.custom.AvatarImageView
        android:id="@id/lyt_row_create_group_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/img_avatar_holder"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@id/lyt_row_create_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/colorBlack"
        android:maxLines="1"
        android:textSize="16sp"
        android:text="Nguyễn Lê Thanh Hương" />
    <CheckBox
        android:id="@id/lyt_row_create_group_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="10dp"/>
</FrameLayout>