<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.cpu11398_local.etalk.presentation.view_model.content.GroupViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@id/contact_fragment_txt_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/group_fragment_txt_title"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:background="@color/colorWhite"/>

        <android.support.v7.widget.RecyclerView
            android:id="@id/group_fragment_rv_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"/>
    </FrameLayout>
</layout>