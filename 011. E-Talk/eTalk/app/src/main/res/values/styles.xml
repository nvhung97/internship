<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:popupMenuStyle">@style/AppTheme.PopupMenu</item>
    </style>

    <!--Popup Menu Style-->
    <style name="AppTheme.PopupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">-10dp</item>
        <item name="android:dropDownVerticalOffset">10dp</item>
    </style>

    <!--Gray circle progress bar-->
    <style name="AppTheme.GrayProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorGray</item>
    </style>

</resources>
